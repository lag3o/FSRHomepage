<h1>Listing rolles</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rolles.each do |rolle| %>
      <tr>
        <td><%= link_to 'Show', rolle %></td>
        <td><%= link_to 'Edit', edit_rolle_path(rolle) %></td>
        <td><%= link_to 'Destroy', rolle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

